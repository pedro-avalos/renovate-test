{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/\\.html?$/"],
      "matchStrings": [
        "https://assets.ubuntu.com/v1/vanilla-framework-version-(?<currentValue>\\d+\\.\\d+\\.\\d+).min\\.css",
        "https://assets.ubuntu.com/v1/vanilla_framework_version_(?<currentValue>\\d+_\\d+_\\d+)_min\\.css"
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "canonical/vanilla-framework",
      "versioningTemplate": "semver",
      "autoReplaceStringTemplate": "https://assets.ubuntu.com/v1/vanilla_framework_version_{{{ newMajor }}}_{{{ newMinor }}}_{{{ newPatch }}}_min.css"
    }
  ]
}
